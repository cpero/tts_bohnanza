<Panel position='0 0 -26'>
  <Panel id='tableSetup' active='true'>
    <Button id='startGameBtn' height='800' width='2000' fontSize='200' position='0 0 0'
      tooltip='Click here once all players are seated. Requires at least 3 players.' onClick='onClickStartGame' interactable='false'>Start Game</Button>
    <ToggleButton id='toggleVariantBtn' height='400' width='2000' fontSize='150' position='0 -800 0'
      color='green' isOn='true' text='Variant Mode: Enabled' onClick='onClickToggleVariant' />
    <Text fontSize='100' position='0 -1400 0' color='white'>
      Adds Coffee, Cocoa, and Wax beans to the deck.
    </Text>
    <Text fontSize='100' position='0 -1600 0' color='white'>Required for 6+ players.</Text>
  </Panel>
  <Panel id='gameLayout' active='false'>
    <Panel id='draw' height='1200' width='800' position='-600 0 0'>
      <Text fontSize='100' color='white'>Draw Pile</Text>
    </Panel>
    <Panel id='discard' height='1200' width='800' position='600 0 0'>
      <Text fontSize='100' color='white'>Discard Pile</Text>
    </Panel>
  </Panel>
</Panel>